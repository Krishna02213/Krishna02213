class Solution {
    public Node flatten(Node head) {
        if (head == null) return null;

        Node curr = head;
        while (curr != null) {
            if (curr.child != null) {
                Node next = curr.next;
                Node child = curr.child;

                curr.next = child;
                child.prev = curr;
                curr.child = null;

                Node runner = child;
                while (runner.next != null) {
                    runner = runner.next;
                }

                runner.next = next;
                if (next != null) {
                    next.prev = runner;
                }
            }
            curr = curr.next;
        }
        return head;
    }
}
