import java.util.HashMap;
import java.util.Map;
import java.util.PriorityQueue;

class Solution {
    
    /**
     * Rearranges the characters of a string so that any two adjacent characters are not the same.
     * * @param s The input string.
     * @return A possible rearrangement of s or "" if not possible.
     */
    public String reorganizeString(String s) {
        int n = s.length();
        
        Map<Character, Integer> counts = new HashMap<>();
        for (char c : s.toCharArray()) {
            counts.put(c, counts.getOrDefault(c, 0) + 1);
        }
        
        PriorityQueue<int[]> pq = new PriorityQueue<>((a, b) -> b[1] - a[1]);
        
        for (Map.Entry<Character, Integer> entry : counts.entrySet()) {
            int count = entry.getValue();
            
            if (count > (n + 1) / 2) {
                return "";
            }
            
            pq.offer(new int[] {entry.getKey(), count});
        }
        StringBuilder result = new StringBuilder();
        
        while (pq.size() >= 2) {
            int[] first = pq.poll();
            int[] second = pq.poll();
            

            result.append((char) first[0]);
            result.append((char) second[0]);
            

            if (--first[1] > 0) {
                pq.offer(first);
            }
            if (--second[1] > 0) {
                pq.offer(second);
            }
        }

        if (!pq.isEmpty()) {
 
            result.append((char) pq.poll()[0]);
        }
        
        return result.toString();
    }
}
